<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link rel="stylesheet" href="/assets/cssFile/index.css" />
    <link rel="stylesheet" href="/assets/cssFile/project.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  </head>
  <body class="bg-black">
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="index.html">
          <img src="/assets/gambar/logo.png" style="height: 60px; margin-top: 12px" />
        </a>
        <button
          style="background-color: green"
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/index" style="color: green">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/blog" style="color: green">Blog</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/product" style="color: green">Product</a>
            </li>
          </ul>
          {{#if isLogin}}
            <p>Welcome, {{User.name}}</p>
            <a href="/logout"><button class="btn-danger me-2">logout</button></a>
          {{else}}
            <a href="/login"><button class="btn-danger me-2">Login</button></a>
            <a href="/register"><button class="btn-danger me-2">Register</button></a>
          {{/if}}
          <a href="/contactme"></a><button class="btn-contact btn-outline-success" type="submit">Contact Me</button>
        </div>
      </div>
    </nav>
    <!-- konten -->
    <div class="container d-flex flex-column mt-5">
      <div class="w-100 d-flex justify-content-end mb-3">
        <a href="/addblog" class="btn-button">Add New Blog</a>
      </div>
      <div>
        {{#each data}}
          <div class="card mb-3 w-100">
            <div class="row g-0" style="background-color: black; border: 1px solid green; box-shadow: 0 0 50px green;">
              <div class="col-md-4">
                <img src="/assets/gambar/blog.jpg" alt="foto" class="img-fluid" />
              </div>
              <div class="col-md-6">
                <div class="body-card">
                  <div class="title-card">
                    <br /><br /><a href="/blog-detail/{{this.id}}" target="_blank" class="mx-3" style="text-decoration: none; color: green; font-size: 22px; font-weight:bold">{{this.title}}</a>
                    <p class="mx-3">{{this.id}}|
                      <span id="time">{{this.createdAt}} </span>
                      WIB | Fiandi Fauzan</p>
                    <p class="mx-3">{{this.content}}</p>
                  </div>
                </div>
              </div>
              <div class="col-md-2 mt-3 d-flex" style="height: fit-content;">
                <a href="/update-blog/{{this.id}}"><button class="btn-primary">Edit Blog</button></a>
                <form method="post" action="/delete-blog/{{this.id}}"><button class="btn-primary">Delete Blog</button></form>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
    <script src="/assets/jsFile/project.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      var timeElement = document.querySelectorAll('#time') timeElement.forEach(function(timeElement){ var origin = timeElement.textContent.trim() var date = new Date (origin) var option = {weekday: 'long', day: 'numeric', month: 'long',
      year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', timeZoneNames: 'short'} var formatDate = date.toLocaleString('id-ID', option) timeElement.textContent = formatDate })
    </script>
  </body>
</html>